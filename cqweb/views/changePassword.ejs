

<!DOCTYPE html>
<html>
   <head>
      <title>CQ</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
      <style>
         *{
         box-sizing: border-box;
         }
         #pmain{
         position: fixed;
         left:50px;
         right:0;
         top:60px;
         bottom:0;
         margin: auto;
         overflow: auto;
         }
         #table1{
         border:5px solid rgba(0,0,0,0.1);
         position: relative;
         background-color: #fff;
         min-height: 1px;
         width:43%;
         padding-right: 15px;
         padding-left: 15px;
         margin-top: 40px;
         font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
         font-weight: 500;
         line-height: 1.1;
         margin:0px auto;
         margin-top:40px;
         }
         #h1{
         font-size: 36px;
         margin: 35px 0px 0px;
         }
         #button1,#button2{
         height: 30px;
         border-radius: 8px;
         background-color: black;
         color: white;
         border:0;
         font-size:15px;
         }
         .infox{
         display: block;
         height: 34px;
         width: 100%;
         outline: 0;
         margin-bottom: 10px;
         border: 1px solid #ccc;
         border-radius: 4px;
         background-color: #fff;	
         color: black;
         padding: 6px 12px;
         font-size: 14px;
         }
         #input1{
         border: 0;
         padding: 9px 12px;
         background-color: #5cb85c;
         color: white;
         font-size: 14px;
         }
      </style>
   </head>
   <body>
       <%if(info.role == 'Admin'){ %>
           <% include ../admin/views/navbar %>
       <% } else if(info.role == 'Uadmin') { %>
          <% include ../community/views/navbar %>
       <% } %>
      <div id="pmain">
         <form id="changepwd">
            <div bgcolor="white" id="table1">
               <div style="margin:20px 0px 10px;">
                  <p id="h1">Change Password</p>
               </div>
               <div style="margin-bottom:15px;">
                  <p style="font-weight:bold;font-size:14px;margin-top:14px;margin-bottom:5px;">Old Password:</p>
                  <input class='infox' type='password' required>
                  <br>
               </div>
               <div style="margin-bottom:15px;">
                  <p style="font-weight:bold;font-size:14px;margin-top:14px;margin-bottom:5px;">New Password:</p>
                  <input class='infox' type='passowrd' required>
                  <br>
               </div>
               <div>
                  <input id='input1' type='submit' value='Submit'>
               </div>
               <br>
            </div>
         </form>
      </div>
   </body>
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
   <script>
      document.getElementsByClassName('anc')[6].classList.add('active');
      document.getElementsByClassName('fa-lock')[0].classList.add('act');
      document.getElementById('changepwd').addEventListener("submit",function(event){
         event.preventDefault();
         var oldpwd = document.getElementsByClassName('infox')[0].value;
         var newpwd = document.getElementsByClassName('infox')[1].value;
         var xhr = new XMLHttpRequest();
         xhr.open('POST','/changePassword');
         xhr.setRequestHeader("Content-Type","application/json");
         xhr.addEventListener("load",function(){
            if(this.readyState == 4 && this.status == 200){
               alert(xhr.responseText);
               if(xhr.responseText == 'Password changed successfully !!'){
                  window.location.href="/";
               }
            }
         });
         xhr.send(JSON.stringify({
            'oldpwd' : oldpwd ,
            'newpwd' : newpwd
         }));
      });
   </script>
</html>
