<script type="text/javascript">
   $("#funcnav1").click(function(){
   	if($("#div2").width()==250)
   	{
   		$("#pmain").animate({left: "50px",}, 400 );
   	}
   	else
   	{
   		$( "#pmain" ).animate({left: "250px",}, 400 );
   	}
   });
   $("#funcnav2").click(function(){
   	if($("#div2").width()==250)
   	{
   		$("#pmain").animate({left: "50px",}, 400 );
   	}
   	else
   	{
   		$( "#pmain" ).animate({left: "250px",}, 400 );
   	}
   });
</script>
<script>
   function funcNav()
   {
   	var div2=document.getElementById('div2');
   	if(div2.style.width=="250px")
   	{
   		div2.style.width="50px";
   	}
   	else
   	{
   		div2.style.width="250px";
   	}
   }
   function logOut()
   {
    console.log("logging out ....");
   	var div3=document.getElementById('div3');
   	if(parseInt(div3.style.width)==0||div3.style.width==0)
   	{
   		div3.style.width="100%";
   		div3.style.height="100vh";
   	}
   	else
   	{
   		var xhttp= new XMLHttpRequest();
   		xhttp.open("GET","/logout");
   		xhttp.send();
   		location.href="http://localhost:8000/";
   	}
   }
   function goHome()
   {
   	var div3=document.getElementById('div3');
   	div3.style.width=0;
   	div3.style.height=0;
   }
   function ani()
   {
   	if(event.target==document.getElementById('b2')||event.target==document.getElementById('b1'))
   		return;
   	document.getElementById("div4").style.animationPlayState = "running";
   	setTimeout(function(){ document.getElementById("div4").style.animationPlayState = "paused"; }, 820);
   }

  function fireConfirmBox()
  {
    if(confirm("Are you sure for user switch ?"))
    {
      window.location.href='http://localhost:8000/admin/switchAsUser';
    }
    else
    {
      window.location.href = window.location.href;
    }
  }
</script>